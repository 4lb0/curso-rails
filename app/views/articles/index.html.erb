<p><%= link_to 'Crear nuevo post', new_article_path %></p>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Acciones</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %> | <%= link_to 'Eliminar', article_path(article),
              method: :delete,
              data: { confirm: 'Estas seguro?' } %></td>
    </tr>
  <% end %>
</table>
